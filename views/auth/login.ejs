<head>
    <% title = 'Login' %>
    <link rel="stylesheet" href="/styles/login.css">
</head>

<div class = "container">
    <div class="col-md-4 col-md-offset-4", id = "login-form">
    <center><h1>Login</h1></center>
    <form method="POST" action="/login">
        <div class="form-group">
            <i class="glyphicon glyphicon-user" aria-hidden="true"></i> Username
            <input type="username" class="form-control" name="username">
        </div>
        <div class="form-group">
            <i class="glyphicon glyphicon-lock" aria-hidden="true"></i> Password
            <input type="password" class="form-control" name="password">
        </div>

        <div class="form-action">
            <input type="submit" class="btn btn-default btn-block" value="submit">
        </div>
    </form>
    <div class = "signup-link">
        <a class="small-link" href="/signup"> Sign up </a>
    </div>
</div>
</div>
