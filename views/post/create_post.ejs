<head>
    <% title = 'New Hack' %>
    <link rel="stylesheet" href="/styles/create_post.css">
    <link rel="stylesheet" href="/styles/dropzone.css">
</head>

<body>
<div class = "container">
    <div class="col-md-3 col-md-offset-2", id = "add-pic">

    </div>
    <div class="col-md-4 col-md-offset-1", id = "post-form">
        <center><h1>New Hack</h1></center>

        <form method="POST" enctype="multipart/form-data" action="/post/create_post">
            <label for="title">Hack Name</label>
            <input type="text" class="form-control" name="title">
            <label for="content">Hack Description</label>
            <textarea type="text" lines="4" class="form-control" name="content"></textarea><br>
            <label for="brand-list">Brand</label>
                <select class="form-control" name="brand">
                <option value="gilette">Gilette</option>
                <option value="head_and_shoulders">Head and Shoulders</option>
                <option value="lenor">Lenor</option>
                <option value="pampers">Pampers</option>
                </select>
            Picture:
                <input type="file" name="picture" />
            <div class="form-action">
            <input type="submit" class="btn btn-default btn-block" value="submit"></div>
        </form>
        </div>
    </div>
</body>
